<div class = 'top-border'>
  <nav class="attempt-at-nav">
    <ul class="list-of-links">
        <% if current_guest %>
        <li class= "link">
          <a href = <%= edit_guest_path(current_guest) %>> RSVP</a>
        </li>
          <li class="link">
            <% if current_guest.admin? %>
              <%= link_to "Guest Information", guest_index_path %>
            <% end %>
          </li>
          <li class = "link">
            <%= link_to "All About Mexico", viva_mexico_path %>
          </li>

          <li class="link">
            <%= link_to "Logout", logout_path, method: :delete %>
          </li>
        </ul>
        <span class="message">
          <% if current_guest.admin? %>
            Hello, Admin
          <% else %>
            Hello, <%=current_guest.first_name1  %>
          <% end %>
        </span>
      <% end %>
  </nav>
</div>
